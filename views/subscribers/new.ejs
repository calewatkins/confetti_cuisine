<div class="data-form">
  <form action="/subscribers/create" method="POST">
    <h2>Create a new subscriber</h2>
    <br>
    <label for="inputName">Name</label>
    <br>
    <input type="text" name="name" id="inputName" placeholder="Name" required>
    <br>
    <label for="inputEmail">Email</label>
    <br>
    <input type="text" name="email" id="inputEmail" placeholder="Email" required>
    <br>
    <label for="inputZipCode">Zip Code</label>
    <br>
    <input type="text" name="zipCode" id="inputZipCode" placeholder="ZipCode" pattern="[0-9]{5}" required>
    <br>
    <button type="submit">Submit</button>
  </form>
</div>